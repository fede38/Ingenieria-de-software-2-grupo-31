<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <% if @user.eliminado %>
        <div class="page-header">
        <!--  "En este div se puede poner el titulo de la pagina o un titulo general" -->
          <h1>Este usuario ya no existe</h1>
        </div>
      <% else %>
