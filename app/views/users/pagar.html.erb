							</div>
						</div>
						<div class="row centering" id='sePuede' style="visibility: hidden;">
							<%= link_to 'Pagar', pagarViajeTarjeta_users_path(id: @user, tipo: @tipo, idT: @viaje), {class: "btn btn-sm colapso my-link-button my-button-with", method: :put} %>
