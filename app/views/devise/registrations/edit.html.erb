<% provide(:titulo, 'Editar usuario') %>

<div class="centering">
  <h1>Editar perfil de <%= @user.nombre %></h1><br>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true, method: :put }) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.file_field :avatar %>
    </div>

    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, :readonly => true, class:"form-control" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Todavia no se confirmo el mail: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="form-group">
      <%= f.label :nombre %><br/>
      <%= f.text_field :nombre, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :apellido %><br/>
      <%= f.text_field :apellido, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :telefono %><br/>
      <%= f.text_field :telefono, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password %> <i>(dejar en blanco si no quieres cambiarla)</i><br />
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :current_password %> <i>(necesitamos tu contrase√±a actual para confirmar los cambios)</i><br />
      <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
    </div>

    <div class="actions">
      <%= f.submit "Actualizar", class:"btn btn-primary"  %>
    </div>
  <% end %>

  <h3>Cancelar mi cuenta.</h3>

  <p>No estas contento con nuestro servicio? <%= button_to "Cancelar mi cuenta", registration_path(resource_name), data: { confirm: "Estas seguro?" }, method: :delete %></p>

  <%= link_to "Volver", :back %>
</div>
