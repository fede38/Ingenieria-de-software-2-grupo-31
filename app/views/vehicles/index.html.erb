<% provide(:titulo, "Vehiculos de "+@user.nombre+" "+@user.apellido) %>
<div class="row">
  <div class="col-md-12">
    <% if @user.eliminado %>
      <div class="page-header">
        <h1>Este usuario ya no existe</h1>
      </div>
    <% else %>
      <div class="row">
        <div class="col-md-1">
        </div>
        <div class="col-md-10">
          <div class="row">
            <div class="col-md-2">
              <%= image_tag(@user.avatar.url,:class=>"circular-image mediumm-image")%>
              <h3 style="text-align: center">
                <%= username %>
              </h3>
              <% if @user == current_user %>
                <p>
                  Nombre:
                 <%= @user.nombre %>
                </p>
                <p>
                  Apellido:
                  <%= @user.apellido %>
                </p>
                <p>
                  E-mail:
                  <%= @user.email %>
                </p>
                <p>
                  Fecha de Nacimiento: <%= formato_fecha %>
                </p>
              <% else %>
                <div>
                  <br />
                  <br />
                </div>
              <% end %>

              <p class="isDisabled">
                Reputacion Piloto:
              </p>

              <% if @user != current_user %>
                <div>
                  <br />
                </div>
              <% end %>

              <p class="isDisabled">
                Reputacion Copiloto:
              </p>

              <% if @user == current_user %>
                <ul type="button" class="btn btn-block btn-sm">
                  <%= link_to 'Nuevo Vehiculo', new_user_vehicle_path(@user),:class => "btn btn-block btn-sm colapso my-link-button" %>
                </ul>
                <ul type="button" class="btn btn-block btn-sm disabled">
                  <%= link_to 'Mis viajes', '#', :class => "btn btn-block btn-sm my-button-color my-link-button isDisabled" %>
                </ul>
                <ul type="button" class="btn btn-sm btn-block "  >
                  <%= link_to 'Mi Perfil',users_path,:class => "btn btn-block btn-sm my-button-color my-link-button" %>
                </ul>
              <% else %>
                <div>
                  <br />
                  <br />
                </div>
                <ul type="button" class="btn btn-block btn-sm disabled">
                  <%= link_to 'Viajes', '#', :class => "btn btn-block btn-sm my-button-color my-link-button isDisabled" %>
                </ul>
                <ul type="button" class="btn btn-block btn-sm">
                  <%= link_to 'Perfil', user_path(@user),:class => "btn btn-block btn-sm my-button-color my-link-button" %>
                </ul>
              <% end %>
            </div>
            <div class="col-md-10">
              <div class="row">
                <div class="col-md-1">
                </div>
                <div class="col-md-10" style="background-color: #fafafa">
                  <h1 style="text-align: center;">
                    Vehiculos
                    <br />
                  </h1>
                  <div class="row">
                    <div class="col-md-1">
                    </div>
                    <div class="col-md-10">
                      <% if @user.vehicles.all.empty? %>
                        <h3 style="text-align: center;">
                          <% if @user == current_user %>
                            No posee vehiculos, <%= link_to ' agrega uno!', new_user_vehicle_path(@user) %>
                          <% else %>
                            No posee vehiculos
                          <% end %>
                        </h3>
                      <% else %>
                        <% @vehicle.each do |ve| %>
                          <div class="well my-jumbotron" >
                            <h3 style="text-align: center;">
                              Patente: <%= ve.patente.upcase %>
                            </h3>
                            <br/>
                            <div class="row " style="margin-left: 10px; margin-right: 10px ">
                              <div class="col-md-4" >
                                <div >
                                  <h5 style="font-weight: bold;">
                                    Marca: <%= ve.marca.upcase %>
                                  </h5>
                                </div>
                                <div >
                                  <h5 style="font-weight: bold;">
                                    Tipo:
                                      <%= ve.tipo.upcase %>
                                  </h5>
                                </div>
                              </div>
                              <div class="col-md-4">
                                <div>
                                  <h5 style="font-weight: bold;">
                                    Modelo:
                                      <%= ve.sub_marca.upcase %>
                                  </h5>
                                </div>
                                <div>
                                  <h5 style="font-weight: bold;">
                                    Color:
                                      <%= ve.color.upcase %>
                                  </h5>
                                </div>
                              </div>
                              <div class="col-md-4">
                                <div>
                                  <h5 style="font-weight: bold;">
                                    AÃ±o:
                                      <%= ve.modelo %>
                                  </h5>
                                </div>
                                <div>
                                  <h5 style="font-weight: bold;">
                                    Asientos:
                                      <%= ve.cantidad_asientos %>
                                  </h5>
                                </div>
                                <br>
                              </div>
                              <% if @user == current_user %>
                                <button type="button" class="btn btn-block btn-sm my-button-color2">
                                  <%= link_to 'Modificar', edit_user_vehicle_path(@user,ve.id),:class => "btn btn-block btn-sm my-button-color my-link-button" %>
                                </button>
                                <button type="button" class="btn btn-block btn-sm my-button-color2">
                                  <%= link_to 'Eliminar', user_vehicle_path(@user,ve), method: :delete,:class => "btn btn-block btn-sm my-button-color my-link-button" %>
                                </button>
                              <% end %>
                            </div>
                            <br>
                            <br>
                          </div>
                        <% end %>
                      <% end %>
                    </div>
                    <div class="col-md-1">
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<br><br><br>
