<h1>Contactanos!</h1>
<%= form_for (@contact_form) do |f| %>
  <div class="centering">
    <div class="form-group">
      <%= f.label :message %> <br>
      <%= f.text_area :message, class: "form-control" %>
    </div>
    <div class=" actions">
      <%= f.submit "Enviar", class:"btn my-link-button my-button-color" %>
    </div>
  </div>
<% end %>
